{% if breadcrumb %}
  <div class="breadcrumb" role="navigation" aria-labelledby="system-breadcrumb">
    <ul>
      {% for item in breadcrumb %}
        <li>
          {% if item.url %}
            <a href="{{ item.url }}">{{ item.text }}</a><!--
            --><span class="breadcrumb__arrow">></span>
          {% else %}
            <span class="breadcrumb__current">{{ item.text }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
{% endif %}
