<div{{ attributes.addClass('widget widget-offer overflow-bg') }}>
  {% if content %}
    <div class="widget-offer__title">
      {{ content.name }}
    </div>
    <div class="widget-offer__description">
      {{ content.field_description }}
    </div>
    <div class="main-btn widget-offer__button">
      {{ content.field_link }}
    </div>
  {% endif %}
</div>